package java8featuresStramApi;

import java.util.ArrayList;
import java.util.List;

public class StreamExample {
	public static void main(String[] args) {
		List<Employee> empList = new ArrayList<>();
		empList.add(new Employee("Rinu", 39));
		empList.add(new Employee("Sibu", 25));
		empList.add(new Employee("Liya", 31));
		empList.add(new Employee("Dude", 37));

		// print all employees above 30 years of age
		empList.stream().filter(p -> (p.getAge() > 30)).forEach(p -> System.out.println(p.getName()));

	}

}

class Employee {
	private String name;
	private int age;

	public Employee() {
	}

	public Employee(String n, int a) {
		this.name = n;
		this.age = a;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}
}

