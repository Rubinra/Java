package java8features;
import java.time.*;
import java.util.*;


public class Task3Employe {

	public static void main(String[] args) {
//		LocalDate date = LocalDate.of(1995, 01, 01);
		String str =null;
		 String delimiter = ",";
		 String result = "", prefix = "";
		List<Employee> empList = new ArrayList<>();
		empList.add(new Employee("Arun",LocalDate.of(1998, 04, 8),"Arun@gmail.com"));
		empList.add(new Employee("Arjun",LocalDate.of(1995, 12, 30),"Arjun@gmail.com"));
		empList.add(new Employee("Bobby",LocalDate.of(1994, 07, 23),"bobby@gmail.com"));
		empList.add(new Employee("varun",LocalDate.of(1994, 01, 03),"varun@gmail.com"));
		empList.add(new Employee("kavya",LocalDate.of(1991, 03, 23),"kavya@gmail.com"));
		System.out.println();
		System.out.println("Employees who have date of birth before(1995-1-1)");
		for (Employee employee : empList) {
			if( employee.getDateOfBirth().minus(Period.of(1995, 01, 01)).getYear()<0) {
				System.out.println("*"+employee.getName());
			}
		}
		System.out.println();
		System.out.println("Age of employees");
		for (Employee employee : empList) {
			System.out.println("*Name:"+employee.getName()+"	-	Age:"+ (Period.between(employee.getDateOfBirth(), LocalDate.now())).getYears());
		}
		System.out.println();
		System.out.println("Date of week of employees");
		
		for (Employee employee : empList) {
			System.out.println(employee.getName()+"	"+employee.getDateOfBirth().getDayOfWeek());
			result += prefix + employee.getName();
            prefix = delimiter;
		}
		System.out.println();
	System.out.println("Joining name of the employees:");
	System.out.println(result);
	}
}

class Employee{
	private String name;
	private LocalDate dateOfBirth;
	private String email;
	public Employee(String name, LocalDate dateOfBirth, String email) {
		setName(name);
		setDateOfBirth(dateOfBirth);
		setEmail(email);
	}
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public LocalDate getDateOfBirth() {
		return dateOfBirth;
	}
	public void setDateOfBirth(LocalDate dateOfBirth) {
		this.dateOfBirth = dateOfBirth;
	}
	public String getEmail() {
		return email;
	}
	public void setEmail(String email) {
		this.email = email;
		
	}
	


}
